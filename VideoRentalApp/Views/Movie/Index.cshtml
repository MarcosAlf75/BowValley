
@model IEnumerable<VideoRentalApp.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <h2>Movies</h2>

    @if (!Model.Any())
    {
        <p>We don't have any movie yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Type</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                        <td>@movie.MovieType.TypeDescription</td>
                        <td>
                            @using (@Html.BeginForm("Delete", "Movie", new { id = movie.Id }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Delete" onclick="return confirm('Are you sure you wish to remove this movie?');" />
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("New Movie", "NewMovie", "Movie", null, new { @class = "btn btn-primary" })
    }
    <br>
</body>

